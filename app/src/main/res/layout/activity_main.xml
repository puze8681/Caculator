<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.parktaejun.caculator.MainActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/result"
            android:textColor="#5d5d5d"
            android:textSize="70dp"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:background="#5d5d5d"
        android:orientation="horizontal"
        android:layout_weight="6"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:weightSum="4"
            android:layout_weight="3"
            android:layout_width="1dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/seven"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="7"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/eight"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/nine"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/four"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/five"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/six"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/one"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/two"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/three"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/dot"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="."
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/zero"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="0"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/submit"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:text="="
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="5"
            android:background="#aaaaaa"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/clear"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="CLR"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/divide"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="/"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/multiply"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="x"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/minus"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="-"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/plus"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="+"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
